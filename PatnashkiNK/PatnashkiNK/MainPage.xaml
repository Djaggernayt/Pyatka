<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PatnashkiNK.MainPage">
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid x:Name="GameGrid" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button x:Name="Button1" Text="1" Grid.Row="0" Grid.Column="0" Clicked="Button_Clicked" />
            <Button x:Name="Button2"  Text="2" Grid.Row="0" Grid.Column="1" Clicked="Button_Clicked" />
            <Button x:Name="Button3" Text="3" Grid.Row="0" Grid.Column="2" Clicked="Button_Clicked" />
            <Button x:Name="Button4"  Text="4" Grid.Row="1" Grid.Column="0" Clicked="Button_Clicked" />
            <Button x:Name="Button5" Text="5" Grid.Row="1" Grid.Column="1" Clicked="Button_Clicked" />
            <Button x:Name="Button6" Text="6" Grid.Row="1" Grid.Column="2" Clicked="Button_Clicked" />
            <Button x:Name="Button7" Text="7" Grid.Row="2" Grid.Column="0" Clicked="Button_Clicked" />
            <Button x:Name="Button8" Text="8" Grid.Row="2" Grid.Column="1" Clicked="Button_Clicked" />
            <Button x:Name="Button9" Grid.Row="2" Grid.Column="2" Clicked="Button_Clicked" />
        </Grid>

        <Button x:Name="RandomButton" Grid.Row="1" Text="Random" Clicked="RandomButton_Clicked" HorizontalOptions="Center" />
    </Grid>

</ContentPage>
